<Window x:Class="UraniumStudio.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:vm="clr-namespace:UraniumStudio.ViewModel"
        xmlns:local="clr-namespace:UraniumStudio"
        mc:Ignorable="d"
        Title="UraniumApp" Height="800" Width="1200" MinHeight="400" MinWidth="600" x:Name="Window">
    <Window.DataContext>
        <vm:MainWindowVM />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel x:Name="TopButtonsLine" Orientation="Horizontal" Grid.Row="0" Background="LightSlateGray">
            <Button x:Name="FileButton" HorizontalContentAlignment="Left" Content="File" Focusable="True"
                    Padding="2" Width="35" HorizontalAlignment="Left"
                    Click="File_OnPreviewMouseLeftButtonDown">
                <Button.ContextMenu>
                    <ContextMenu IsEnabled="True">
                        <MenuItem Header="Open" Focusable="True"
                                  PreviewMouseLeftButtonDown="FileOpen_OnPreviewLeftButtonDown" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            
        </StackPanel>


        <DockingManager Grid.Row="1"
                        x:Name="DockingManager"
                        IsVirtualizingAnchorable="True"
                        AllowMixedOrientation="True"
                        AutoWindowSizeWhenOpened="True"
                        IsVirtualizingDocument="True" HorizontalAlignment="Stretch">
            <DockingManager.Theme>
                <Vs2013DarkTheme />
            </DockingManager.Theme>

            <LayoutRoot>

                <LayoutRoot.RightSide>
                    <LayoutAnchorSide x:Name="RightAnchorSide">
                        <LayoutAnchorGroup>
                            <LayoutAnchorable CanShowOnHover="True" CanAutoHide="True" CanClose="True" Title="Stats"
                                              AutoHideMinWidth="200" IsSelected="False"
                                              AutoHideMinHeight="100" CanDockAsTabbedDocument="True" IsActive="False">
                                <Border Background="Transparent" IsEnabled="False" />
                            </LayoutAnchorable>
                        </LayoutAnchorGroup>
                    </LayoutAnchorSide>
                </LayoutRoot.RightSide>

                <LayoutRoot.BottomSide>
                    <LayoutAnchorSide x:Name="BottomAnchorSide">
                        <LayoutAnchorGroup>
                            <LayoutAnchorable Title="Panel">
                                <Border Background="Transparent" />
                            </LayoutAnchorable>
                        </LayoutAnchorGroup>
                    </LayoutAnchorSide>
                </LayoutRoot.BottomSide>

                <LayoutPanel>
                    <LayoutDocumentPane x:Name="MainPanel">
                        <LayoutDocument CanClose="False" CanFloat="False">

                            <Canvas x:Name="CanvasFunctions" Background="Bisque">
                                <ItemsControl ItemsSource="{Binding FunctionsToRender}"
                                              HorizontalContentAlignment="Left" VerticalAlignment="Top"
                                              PreviewMouseLeftButtonDown="CanvasItem_OnPreviewMouseLeftButtonDown">
                                </ItemsControl>
                            </Canvas>

                        </LayoutDocument>
                    </LayoutDocumentPane>
                </LayoutPanel>

            </LayoutRoot>
        </DockingManager>
    </Grid>
</Window>